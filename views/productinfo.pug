extends layout.pug

block content
    body
        .row.col-6.justify-content-start.mx-auto
            .card.col-6
                img.img-fluid(src="https://www.dropbox.com/s/kns9zjzyzl2jj6u/thunder.jpg?dl=1")
            .row.col-6
                .container.text-end
                    .row.justify-content-end
                        .col-12.col-lg-12
                            p.text-center.brandtext
                                b Brand Name
                            p.text-center.aligntext
                                b Product Name
                            p.text-center.pricetext
                                b Price
                        .conatiner
                            .row.justify-content-start
                                .col-8.sizingmargin
                                    label.text-black.text-start(for="sizing-dropdown") Size
                                        br
                                        select#sizing-dropdown(name= "size")
                                            option(value= "Small") Small
                                            option(value= "Medium") Medium
                                            option(value= "Large") Large
                                            option(value= "X-Large") X-Large
                            .row.justify-content-start
                                .col-8.my-2
                                    label.text-black.text-start(for="condition-dropdown") Condition
                                        br
                                        select#condition-dropdown(name= "condition")
                                            option(value= "New") New
                                            option(value= "Used") Used
                                            option(value= "DeadStock") DeadStock
                            .row.justify-content-start
                                .col-10.my-2
                                    label.text-black.text-start(for="quanity-dropdown") Quanity
                                        br
                                        input(name= "quanity", value="1", type="number", max ="5", min ="1")
                            .row.justify-content-start
                                .col-12.my-2.cartmargin
                                    a.btn.btn-outline-success.btn-lg.cartbtn(href="#") Add To Cart

