//- @pugdoc
    name: homepage.pug
    description: Homepage Template
                This Pug template defines the layout and content for displaying the homepage.
                It extends the 'layout.pug' template and includes a block for displaying product information.
                The comments below explain the structure and purpose of each section.
    capture: all

//- Extending the 'layout.pug' template
extends layout.pug

//- Define the 'content' block for this template
block content
    body
        //- Container for the main content of the homepage
        .container.rounded.text-center
            .row
                //- Column for additional content (if needed)
                .col-sm-4

                //- Column for displaying products
                .col-sm-12.justify.content-center
                    ul#producttable.text-center.text-black.justify-content-center

                //- Load Bootstrap JS bundle from CDN
                script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js", integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM", crossorigin="anonymous")

                //- Load additional scripts for functionality
                script.
                    //- Load product data and generate content
                    loadProducts();
                    sideBarGen();
                    searchItems();

                    //- Set up event for clearing search input on focus
                    window.onload = function() {
                        var searchBar = document.getElementById('searchform');
                        searchBar.onfocus = function() {
                            this.value = '';
                        };
                    };

                    //- Apply Nailthumb plugin to images
                    jQuery(document).ready(function() {
                        jQuery('img.center-img.thumbnails').nailthumb({width:335,height:185, method:'resize'});
                    });
